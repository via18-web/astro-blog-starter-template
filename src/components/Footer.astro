---
const currentYear = new Date().getFullYear();

const footerLinks = {
  'For Publishers': [
    { name: 'Monetize Traffic', href: '/publishers#monetize' },
    { name: 'Ad Formats', href: '/publishers#formats' },
    { name: 'Payment Options', href: '/payments' },
    { name: 'Publisher Login', href: '/login/publisher' }
  ],
  'For Advertisers': [
    { name: 'Buy Traffic', href: '/advertisers#buy' },
    { name: 'Targeting Options', href: '/advertisers#targeting' },
    { name: 'Campaign Tools', href: '/advertisers#tools' },
    { name: 'Advertiser Login', href: '/login/advertiser' }
  ],
  'Company': [
    { name: 'About Us', href: '/about' },
    { name: 'Blog', href: '/blog' },
    { name: 'Contact', href: '/contact' },
    { name: 'Careers', href: '/careers' }
  ],
  'Legal': [
    { name: 'Terms of Service', href: '/terms' },
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Cookie Policy', href: '/cookies' },
    { name: 'DMCA', href: '/dmca' }
  ]
};

const cryptoLogos = ['Bitcoin', 'Ethereum', 'USDT', 'Litecoin'];
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <h3 class="brand-name">XADG</h3>
        <p class="brand-tagline">Premium Adult Ad Network</p>
        <p class="brand-description">
          Connecting premium adult publishers with targeted advertisers. 
          Maximize your revenue with our cutting-edge ad technology.
        </p>
        <div class="crypto-badges">
          <p class="crypto-title">We Accept Crypto:</p>
          <div class="crypto-icons">
            {cryptoLogos.map(crypto => (
              <span class="crypto-badge">{crypto}</span>
            ))}
          </div>
        </div>
      </div>

      {Object.entries(footerLinks).map(([category, links]) => (
        <div class="footer-column">
          <h4>{category}</h4>
          <ul>
            {links.map(link => (
              <li><a href={link.href}>{link.name}</a></li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="footer-bottom">
      <p>&copy; {currentYear} XADG. All rights reserved.</p>
      <p class="disclaimer">
        18+ Only. All content is for adults only. By using this service, you confirm you are 18 years or older.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--dark);
    color: var(--light);
    padding: 4rem 0 2rem;
    margin-top: 4rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr repeat(4, 1fr);
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    padding-right: 2rem;
  }

  .brand-name {
    font-size: 2rem;
    font-weight: 900;
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .brand-tagline {
    color: #999;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .brand-description {
    color: #ccc;
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .crypto-badges {
    margin-top: 1.5rem;
  }

  .crypto-title {
    font-size: 0.85rem;
    color: #999;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .crypto-icons {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .crypto-badge {
    background: rgba(255, 255, 255, 0.1);
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--success);
    border: 1px solid rgba(0, 208, 132, 0.3);
  }

  .footer-column h4 {
    color: var(--light);
    margin-bottom: 1.5rem;
    font-size: 1rem;
    font-weight: 700;
  }

  .footer-column ul {
    list-style: none;
  }

  .footer-column li {
    margin-bottom: 0.75rem;
  }

  .footer-column a {
    color: #999;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-column a:hover {
    color: var(--light);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
    text-align: center;
    color: #999;
    font-size: 0.9rem;
  }

  .disclaimer {
    margin-top: 1rem;
    font-size: 0.85rem;
    color: #666;
  }

  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .footer-brand {
      grid-column: 1 / -1;
      padding-right: 0;
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
