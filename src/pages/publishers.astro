<style>
  .hero-alt {
    background: linear-gradient(135deg, #1a0033 0%, #330033 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero-alt h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.3rem;
    color: #ccc;
  }

  .benefits-section {
    padding: 5rem 0;
    background: white;
  }

  .benefits-intro {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .benefits-intro h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .benefits-intro p {
    font-size: 1.1rem;
    color: #666;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .benefit-card {
    background: var(--gray-light);
    padding: 2.5rem;
    border-radius: 15px;
    text-align: center;
    transition: transform 0.3s ease;
  }

  .benefit-card.featured {
    background: linear-gradient(135deg, #ff0066 0%, #6c00ff 100%);
    color: white;
    transform: scale(1.05);
  }

  .benefit-card:hover {
    transform: translateY(-5px);
  }

  .benefit-card.featured:hover {
    transform: scale(1.05) translateY(-5px);
  }

  .benefit-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .benefit-card h3 {
    margin-bottom: 1rem;
    font-size: 1.5rem;
  }

  .benefit-card.featured h3,
  .benefit-card.featured p {
    color: white;
  }

  .benefit-highlight {
    margin-top: 1.5rem;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    font-weight: 700;
    font-size: 1.1rem;
  }

  .ad-formats-section {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .formats-showcase {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .format-item {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .format-item:hover {
    border-color: var(--primary);
  }

  .format-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .format-badge {
    padding: 0.4rem 0.8rem;
    background: var(--gray-light);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .format-badge.popular {
    background: var(--gradient);
    color: white;
  }

  .format-specs {
    list-style: none;
    margin: 1.5rem 0;
  }

  .format-specs li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--gray-light);
    color: #666;
  }

  .format-earnings {
    margin-top: 1.5rem;
    padding: 1rem;
    background: var(--gray-light);
    border-radius: 8px;
    font-weight: 700;
    color: var(--success);
    text-align: center;
  }

  .payment-section {
    padding: 5rem 0;
    background: white;
  }

  .payment-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .payment-card {
    background: var(--gray-light);
    padding: 2rem;
    border-radius: 10px;
    text-align: center;
  }

  .payment-card h3 {
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .payment-features {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1.5rem;
    font-size: 0.9rem;
    color: #666;
  }

  .requirements-section {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .requirements-section h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .requirements-content {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
  }

  .requirements-list {
    background: white;
    padding: 2.5rem;
    border-radius: 15px;
  }

  .requirements-list h3 {
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .requirements-list ul {
    list-style: none;
  }

  .requirements-list li {
    padding: 0.75rem 0;
    font-size: 1.05rem;
    border-bottom: 1px solid var(--gray-light);
  }

  .cta-section {
    padding: 5rem 0;
    background: var(--dark);
  }

  .cta-box {
    text-align: center;
    color: white;
  }

  .cta-box h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-box > p {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 3rem;
  }

  .cta-stats {
    display: flex;
    justify-content: center;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .cta-stat {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cta-stat strong {
    font-size: 2rem;
    color: var(--primary);
  }

  .cta-stat span {
    color: #999;
  }

  @media (max-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .payment-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-alt h1 {
      font-size: 2rem;
    }

    .benefits-grid,
    .formats-showcase,
    .payment-grid,
    .requirements-content {
      grid-template-columns: 1fr;
    }

    .benefit-card.featured {
      transform: scale(1);
    }

    .cta-stats {
      flex-direction: column;
      gap: 2rem;
    }
  }
</style>
