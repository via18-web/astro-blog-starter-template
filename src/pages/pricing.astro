  .tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 4rem;
  }

  .tab-button {
    padding: 1rem 3rem;
    background: var(--gray-light);
    border: 2px solid transparent;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
