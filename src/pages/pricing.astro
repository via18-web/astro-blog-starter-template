    display: none;
  }

  .tab-content.active {
    display: block;
  }

  .pricing-intro {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .pricing-intro h2 {
    font-size: 2.5rem;
