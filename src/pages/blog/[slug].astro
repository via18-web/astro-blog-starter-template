---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getAllPosts, getPostBySlug, type BlogPost } from '../../data/blog';

export async function getStaticPaths() {
  const posts = getAllPosts();
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
const allPosts = getAllPosts();
const relatedPosts = allPosts
  .filter(p => p.category === post.category && p.slug !== post.slug)
  .slice(0, 3);
---

<Layout 
  title={post.title}
  description={post.description}
  keywords={`${post.category.toLowerCase()}, adult advertising, ${post.title.toLowerCase()}`}
  ogImage={post.image}
>
  <Header />
  
  <main>
    <article class="blog-post">
      <div class="post-header">
        <div class="container">
          <div class="breadcrumbs">
            <a href="/">Home</a> / <a href="/blog">Blog</a> / <span>{post.title}</span>
          </div>
          <div class="post-meta">
            <span class="post-category">{post.category}</span>
            <span class="post-date">{new Date(post.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
            <span class="post-author">By {post.author}</span>
          </div>
          <h1 class="post-title">{post.title}</h1>
          <p class="post-description">{post.description}</p>
        </div>
      </div>

      <div class="post-image-hero">
        <div class="post-image-placeholder"></div>
      </div>

      <div class="post-body">
        <div class="container">
          <div class="post-content" set:html={post.content} />

          <div class="post-footer">
            <div class="share-section">
              <h4>Share this article</h4>
              <div class="share-buttons">
                <button class="share-btn twitter" data-share="twitter">Twitter</button>
                <button class="share-btn facebook" data-share="facebook">Facebook</button>
                <button class="share-btn linkedin" data-share="linkedin">LinkedIn</button>
                <button class="share-btn copy" data-share="copy">Copy Link</button>
              </div>
            </div>

            <div class="author-bio">
              <div class="author-avatar"></div>
              <div class="author-info">
                <h4>{post.author}</h4>
                <p>Content strategist and adult industry expert specializing in traffic monetization and digital advertising.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      {relatedPosts.length > 0 && (
        <div class="related-posts">
          <div class="container">
            <h2>Related Articles</h2>
            <div class="related-grid">
              {relatedPosts.map(related => (
                <a href={`/blog/${related.slug}`} class="related-card">
                  <div class="related-image"></div>
                  <div class="related-content">
                    <span class="related-category">{related.category}</span>
                    <h3>{related.title}</h3>
                    <p>{related.description}</p>
                  </div>
                </a>
              ))}
            </div>
          </div>
        </div>
      )}

      <div class="cta-section">
        <div class="container">
          <h2>Ready to Get Started?</h2>
          <p>Join thousands of publishers and advertisers succeeding with XADG</p>
          <div class="cta-buttons">
            <a href="/signup?type=publisher" class="btn">Join as Publisher</a>
            <a href="/signup?type=advertiser" class="btn btn-secondary">Start Advertising</a>
          </div>
        </div>
      </div>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  .post-header {
    background: linear-gradient(135deg, #1a0033 0%, #330033 100%);
    color: white;
    padding: 4rem 0 3rem;
  }

  .breadcrumbs {
    font-size: 0.9rem;
    margin-bottom: 2rem;
    color: #ccc;
  }

  .breadcrumbs a {
    color: #ccc;
    transition: color 0.3s ease;
  }

  .breadcrumbs a:hover {
    color: white;
  }

  .breadcrumbs span {
    color: var(--primary);
  }

  .post-meta {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .post-category {
    background: var(--gradient);
    padding: 0.5rem 1.25rem;
    border-radius: 25px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .post-date,
  .post-author {
    color: #ccc;
    font-size: 0.95rem;
  }

  .post-title {
    font-size: 3rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    max-width: 900px;
  }

  .post-description {
    font-size: 1.3rem;
    line-height: 1.6;
    color: #ccc;
    max-width: 800px;
  }

  .post-image-hero {
    height: 500px;
    overflow: hidden;
  }

  .post-image-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #ff0066 0%, #6c00ff 100%);
  }

  .post-body {
    padding: 5rem 0;
    background: white;
  }

  .post-content {
    max-width: 800px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.8;
    color: #333;
  }

  .post-content :global(h2) {
    font-size: 2rem;
    margin: 3rem 0 1.5rem;
    color: var(--dark);
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    margin: 2.5rem 0 1rem;
    color: var(--dark);
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin: 1.5rem 0 1.5rem 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.75rem;
  }

  .post-content :global(strong) {
    color: var(--dark);
    font-weight: 700;
  }

  .post-footer {
    max-width: 800px;
    margin: 4rem auto 0;
    padding-top: 3rem;
    border-top: 2px solid var(--gray-light);
  }

  .share-section {
    margin-bottom: 3rem;
  }

  .share-section h4 {
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
  }

  .share-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .share-btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 50px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .share-btn:hover {
    transform: translateY(-2px);
  }

  .share-btn.twitter {
    background: #1da1f2;
    color: white;
  }

  .share-btn.facebook {
    background: #4267B2;
    color: white;
  }

  .share-btn.linkedin {
    background: #0077b5;
    color: white;
  }

  .share-btn.copy {
    background: var(--dark);
    color: white;
  }

  .author-bio {
    display: flex;
    gap: 2rem;
    background: var(--gray-light);
    padding: 2.5rem;
    border-radius: 15px;
  }

  .author-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: var(--gradient);
    flex-shrink: 0;
  }

  .author-info h4 {
    margin-bottom: 0.75rem;
    font-size: 1.3rem;
  }

  .author-info p {
    color: #666;
    line-height: 1.6;
  }

  .related-posts {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .related-posts h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .related-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: block;
  }

  .related-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
  }

  .related-image {
    height: 150px;
    background: linear-gradient(135deg, #ff0066 0%, #6c00ff 100%);
  }

  .related-content {
    padding: 1.5rem;
  }

  .related-category {
    background: var(--gradient);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.75rem;
    font-weight: 600;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .related-content h3 {
    font-size: 1.2rem;
    margin-bottom: 0.75rem;
    color: var(--dark);
    line-height: 1.3;
  }

  .related-content p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .cta-section {
    padding: 5rem 0;
    background: var(--dark);
    color: white;
    text-align: center;
  }

  .cta-section h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-section p {
    font-size: 1.2rem;
    color: #ccc;
    margin-bottom: 2.5rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  @media (max-width: 1024px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.1rem;
    }

    .post-image-hero {
      height: 300px;
    }

    .author-bio {
      flex-direction: column;
      text-align: center;
    }

    .author-avatar {
      margin: 0 auto;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons .btn {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

<script>
  const shareButtons = document.querySelectorAll('.share-btn');
  
  shareButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const shareType = btn.getAttribute('data-share');
      const url = window.location.href;
      const title = document.querySelector('.post-title')?.textContent || '';

      switch(shareType) {
        case 'twitter':
          window.open(`https://twitter.com/intent/tweet?url=${encodeURIComponent(url)}&text=${encodeURIComponent(title)}`, '_blank');
          break;
        case 'facebook':
          window.open(`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`, '_blank');
          break;
        case 'linkedin':
          window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(url)}`, '_blank');
          break;
        case 'copy':
          navigator.clipboard.writeText(url).then(() => {
            alert('Link copied to clipboard!');
          });
          break;
      }
    });
  });
</script>
