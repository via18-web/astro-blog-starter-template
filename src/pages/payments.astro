    font-weight: 600;
    color: #666;
  }

  .payment-methods-section {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .methods-tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 4rem;
