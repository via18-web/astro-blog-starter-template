---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Contact Us" 
  description="Get in touch with XADG. Contact our sales team for advertising inquiries or publisher support. Available 24/7 via email, Telegram, and live chat."
  keywords="contact xadg, advertising support, publisher support, sales inquiry, customer service, adult ad network contact"
>
  <Header />
  
  <main>
    <section class="hero-contact">
      <div class="container">
        <h1>Get in Touch</h1>
        <p class="lead">We're here to help you succeed</p>
      </div>
    </section>

    <section class="contact-options">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-card">
            <div class="contact-icon">üìß</div>
            <h3>Email Support</h3>
            <p>Get a response within 24 hours</p>
            <a href="mailto:support@xadg.com" class="contact-link">support@xadg.com</a>
            <a href="mailto:sales@xadg.com" class="contact-link">sales@xadg.com</a>
          </div>

          <div class="contact-card">
            <div class="contact-icon">üí¨</div>
            <h3>Live Chat</h3>
            <p>Available 24/7 for instant support</p>
            <button class="contact-link" id="open-chat">Start Live Chat</button>
          </div>

          <div class="contact-card">
            <div class="contact-icon">üì±</div>
            <h3>Telegram</h3>
            <p>Direct messaging with our team</p>
            <a href="https://t.me/xadg_support" class="contact-link" target="_blank">@xadg_support</a>
          </div>

          <div class="contact-card">
            <div class="contact-icon">üìû</div>
            <h3>Skype</h3>
            <p>For premium clients and partners</p>
            <a href="skype:xadg.network?chat" class="contact-link">xadg.network</a>
          </div>
        </div>
      </div>
    </section>

    <section class="contact-form-section">
      <div class="container">
        <div class="form-wrapper">
          <div class="form-intro">
            <h2>Send Us a Message</h2>
            <p>Fill out the form and we'll get back to you as soon as possible</p>
          </div>

          <form class="contact-form" id="contact-form">
            <div class="form-row">
              <div class="form-group">
                <label for="name">Your Name *</label>
                <input type="text" id="name" name="name" required placeholder="John Doe">
              </div>

              <div class="form-group">
                <label for="email">Email Address *</label>
                <input type="email" id="email" name="email" required placeholder="john@example.com">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="subject">Subject *</label>
                <select id="subject" name="subject" required>
                  <option value="">Select a subject</option>
                  <option value="publisher">Publisher Inquiry</option>
                  <option value="advertiser">Advertiser Inquiry</option>
                  <option value="technical">Technical Support</option>
                  <option value="billing">Billing Question</option>
                  <option value="partnership">Partnership Opportunity</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div class="form-group">
                <label for="account-type">I am a *</label>
                <select id="account-type" name="account-type" required>
                  <option value="">Select type</option>
                  <option value="publisher">Publisher</option>
                  <option value="advertiser">Advertiser</option>
                  <option value="both">Both</option>
                  <option value="interested">Interested Party</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label for="website">Your Website (Optional)</label>
              <input type="url" id="website" name="website" placeholder="https://yourwebsite.com">
            </div>

            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="6" required placeholder="Tell us more about your inquiry..."></textarea>
            </div>

            <div class="form-group checkbox-group">
              <label>
                <input type="checkbox" name="newsletter" id="newsletter">
                <span>Subscribe to our newsletter for industry updates and special offers</span>
              </label>
            </div>

            <button type="submit" class="btn submit-btn">Send Message</button>
          </form>

          <div class="form-success" id="form-success">
            <div class="success-icon">‚úì</div>
            <h3>Message Sent Successfully!</h3>
            <p>Thank you for contacting us. We'll get back to you within 24 hours.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="departments-section">
      <div class="container">
        <h2 class="section-title">Contact by Department</h2>
        <div class="departments-grid">
          <div class="department-card">
            <h3>üìä Publisher Support</h3>
            <p>Questions about monetization, ad formats, or payments</p>
            <a href="mailto:publishers@xadg.com">publishers@xadg.com</a>
          </div>

          <div class="department-card">
            <h3>üéØ Advertiser Support</h3>
            <p>Campaign setup, targeting, and optimization help</p>
            <a href="mailto:advertisers@xadg.com">advertisers@xadg.com</a>
          </div>

          <div class="department-card">
            <h3>üíº Sales Team</h3>
            <p>High-volume deals and enterprise solutions</p>
            <a href="mailto:sales@xadg.com">sales@xadg.com</a>
          </div>

          <div class="department-card">
            <h3>üîß Technical Support</h3>
            <p>Integration help and technical troubleshooting</p>
            <a href="mailto:tech@xadg.com">tech@xadg.com</a>
          </div>

          <div class="department-card">
            <h3>üí∞ Billing & Finance</h3>
            <p>Payment inquiries and billing questions</p>
            <a href="mailto:billing@xadg.com">billing@xadg.com</a>
          </div>

          <div class="department-card">
            <h3>ü§ù Partnerships</h3>
            <p>Strategic partnerships and collaborations</p>
            <a href="mailto:partners@xadg.com">partners@xadg.com</a>
          </div>
        </div>
      </div>
    </section>

    <section class="faq-preview">
      <div class="container">
        <h2>Quick Answers</h2>
        <p class="faq-intro">Looking for quick answers? Check out these common questions:</p>
        <div class="faq-list">
          <div class="faq-item">
            <h4>How long does approval take?</h4>
            <p>Most accounts are approved within 24 hours after submitting your application.</p>
          </div>
          <div class="faq-item">
            <h4>What is the minimum payout?</h4>
            <p>Crypto payments have no minimum. Other methods vary: PayPal $500, Wire $1000, Paxum $100.</p>
          </div>
          <div class="faq-item">
            <h4>Do you offer API access?</h4>
            <p>Yes, all accounts have full API access for campaign management and reporting.</p>
          </div>
          <div class="faq-item">
            <h4>What payment methods do you accept?</h4>
            <p>We accept cryptocurrency (BTC, ETH, USDT, LTC), wire transfer, credit cards, and more.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="office-info">
      <div class="container">
        <h2>Company Information</h2>
        <div class="company-details">
          <div class="detail-item">
            <h4>Registered Office</h4>
            <p>XADG Networks Ltd.</p>
            <p>Crypto Valley, Zug</p>
            <p>Switzerland</p>
          </div>
          <div class="detail-item">
            <h4>Business Hours</h4>
            <p>24/7 Support Available</p>
            <p>Sales Team: Mon-Fri</p>
            <p>9:00 AM - 6:00 PM CET</p>
          </div>
          <div class="detail-item">
            <h4>Response Times</h4>
            <p>Live Chat: Instant</p>
            <p>Email: Within 24 hours</p>
            <p>Sales Inquiries: Within 12 hours</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .hero-contact {
    background: linear-gradient(135deg, #1a0033 0%, #330033 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .hero-contact h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .lead {
    font-size: 1.3rem;
    color: #ccc;
  }

  .contact-options {
    padding: 5rem 0;
    background: white;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }

  .contact-card {
    background: var(--gray-light);
    padding: 2.5rem 2rem;
    border-radius: 15px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }

  .contact-icon {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .contact-card h3 {
    margin-bottom: 0.75rem;
    font-size: 1.3rem;
  }

  .contact-card p {
    color: #666;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .contact-link {
    display: inline-block;
    color: var(--primary);
    font-weight: 600;
    padding: 0.75rem 1.5rem;
    background: white;
    border-radius: 25px;
    margin-top: 0.5rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 1rem;
  }

  .contact-link:hover {
    background: var(--primary);
    color: white;
  }

  .contact-form-section {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .form-wrapper {
    max-width: 800px;
    margin: 0 auto;
    background: white;
    padding: 4rem;
    border-radius: 20px;
    box-shadow: 0 5px 30px rgba(0,0,0,0.1);
  }

  .form-intro {
    text-align: center;
    margin-bottom: 3rem;
  }

  .form-intro h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .form-intro p {
    color: #666;
    font-size: 1.1rem;
  }

  .contact-form {
    display: block;
  }

  .form-success {
    display: none;
    text-align: center;
    padding: 3rem;
  }

  .form-success.active {
    display: block;
  }

  .contact-form.submitted {
    display: none;
  }

  .success-icon {
    width: 80px;
    height: 80px;
    background: var(--success);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    margin: 0 auto 2rem;
  }

  .form-success h3 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: var(--success);
  }

  .form-success p {
    color: #666;
    font-size: 1.1rem;
  }

  .form-row {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--dark);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 2px solid var(--gray-light);
    border-radius: 8px;
    font-size: 1rem;
    font-family: inherit;
    transition: border-color 0.3s ease;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--primary);
  }

  .form-group textarea {
    resize: vertical;
  }

  .checkbox-group label {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    font-weight: normal;
    cursor: pointer;
  }

  .checkbox-group input[type="checkbox"] {
    width: auto;
    margin-top: 0.25rem;
    cursor: pointer;
  }

  .submit-btn {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
    margin-top: 1rem;
  }

  .departments-section {
    padding: 5rem 0;
    background: white;
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .departments-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .department-card {
    background: var(--gray-light);
    padding: 2.5rem;
    border-radius: 15px;
    border-left: 4px solid var(--primary);
  }

  .department-card h3 {
    margin-bottom: 1rem;
    font-size: 1.3rem;
  }

  .department-card p {
    color: #666;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .department-card a {
    color: var(--primary);
    font-weight: 600;
    word-break: break-all;
  }

  .faq-preview {
    padding: 5rem 0;
    background: var(--gray-light);
  }

  .faq-preview h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .faq-intro {
    text-align: center;
    color: #666;
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .faq-list {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .faq-item {
    background: white;
    padding: 2rem;
    border-radius: 15px;
  }

  .faq-item h4 {
    color: var(--primary);
    margin-bottom: 1rem;
    font-size: 1.2rem;
  }

  .faq-item p {
    color: #666;
    line-height: 1.6;
  }

  .office-info {
    padding: 5rem 0;
    background: var(--dark);
    color: white;
  }

  .office-info h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .company-details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 4rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .detail-item {
    text-align: center;
  }

  .detail-item h4 {
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    color: var(--primary);
  }

  .detail-item p {
    color: #ccc;
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .departments-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-contact h1 {
      font-size: 2rem;
    }

    .contact-grid,
    .departments-grid,
    .faq-list,
    .company-details {
      grid-template-columns: 1fr;
    }

    .form-wrapper {
      padding: 2rem;
    }

    .form-row {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('form-success');
  const chatButton = document.getElementById('open-chat');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    // Simulate form submission
    form.classList.add('submitted');
    successMessage?.classList.add('active');
    
    // In production, you would send this to your backend
    console.log('Form submitted:', new FormData(form));
  });

  chatButton?.addEventListener('click', () => {
    alert('Live chat would open here. Integrate with your preferred live chat solution (Tawk.to, Intercom, etc.)');
  });
</script>
