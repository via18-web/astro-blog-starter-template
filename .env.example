# XADG Environment Variables
# Copy this file to .env and fill in your values

# Site Configuration
SITE_URL=https://xadg.com
SITE_NAME=XADG
SITE_ENV=production

# Email Configuration
CONTACT_EMAIL=support@xadg.com
SALES_EMAIL=sales@xadg.com

# Social Media
TELEGRAM_SUPPORT=@xadg_support
TWITTER_HANDLE=@xadg

# Payment Configuration
# Add your crypto payment gateway API keys here
# CRYPTO_GATEWAY_API_KEY=your_api_key_here
# CRYPTO_GATEWAY_SECRET=your_secret_here

# Analytics
# Google Analytics
# GA_TRACKING_ID=G-XXXXXXXXXX

# Facebook Pixel
# FB_PIXEL_ID=XXXXXXXXXX

# API Configuration
# If you have a backend API
# API_URL=https://api.xadg.com
# API_KEY=your_api_key

# Cloudflare Configuration
# CLOUDFLARE_ACCOUNT_ID=your_account_id
# CLOUDFLARE_API_TOKEN=your_api_token

# Database (if using)
# DATABASE_URL=your_database_url

# Redis (if using for caching)
# REDIS_URL=your_redis_url

# Email Service (SendGrid, Mailgun, etc.)
# EMAIL_API_KEY=your_email_api_key

# Telegram Bot (for notifications)
# TELEGRAM_BOT_TOKEN=your_bot_token
# TELEGRAM_CHAT_ID=your_chat_id
